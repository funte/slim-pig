    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/glob-parent": "^5.1.1",
    "@types/minimatch": "^3.0.5",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "commitizen": "^4.2.4",
    "eslint": "^7.20.0",
